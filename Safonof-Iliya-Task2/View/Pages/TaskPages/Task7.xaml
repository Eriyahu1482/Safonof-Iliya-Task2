<Page
    x:Class="Safonof_Iliya_Task2.View.Pages.TaskPages.Task7"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Safonof_Iliya_Task2.View.Pages.TaskPages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Border>
        <Grid>
            <Image Margin="0,-12,0,0" Source="/images/TaskPage7.jpg" />
            <Border
                Width="300"
                Height="400"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*" />
                        <RowDefinition Height="0.25*" />
                        <RowDefinition Height="0.15*" />
                        <RowDefinition Height="0.25*" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0">
                        <Image Source="/images/task1.png" />
                    </Border>
                    <Border Grid.Row="1">
                        <Image Source="/images/task1zn.png" />
                    </Border>
                    <StackPanel Grid.Row="2">
                        <TextBlock FontSize="20" Text="Переменная a:" />

                    </StackPanel>
                    <TextBox
                        x:Name="TBa"
                        Grid.Row="2"
                        Width="127"
                        Margin="150,5,23,38"
                        BorderBrush="Transparent"
                        FontSize="20"
                        RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1" />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <Border
                        Grid.Row="3"
                        Width="200"
                        Height="70"
                        Margin="50,14,50,27"
                        BorderBrush="Black"
                        BorderThickness="1"
                        MouseDown="BTN_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <TextBlock FontSize="30" Text="Решение" />
                            </StackPanel>
                            <materialDesign:PackIcon
                                Width="39"
                                Height="66"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="FaceCry" />
                        </Grid>


                    </Border>

                </Grid>

            </Border>
            <Button
                x:Name="BtnBack"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                Click="BtnBack_Click"
                Content="{materialDesign:PackIcon Kind=ArrowLeft}"
                Foreground="#FFFFFF" />
        </Grid>
    </Border>
</Page>
